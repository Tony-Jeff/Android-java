<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/colorTexto">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:orientation="vertical"
    android:background="@color/colorTexto">




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemImagem"
        android:padding="2dp"
        android:layout_margin="2dp"
        android:textAlignment="center"

        android:layout_width="100dp"
        android:layout_height="100dp"




        android:src="@mipmap/ic_launcher" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/itemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


        <TextView
            android:id="@+id/itemNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorSobrenome"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/itemSobrenome"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="invisible" />

    <TextView
        android:id="@+id/itemEndereco"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/itemTelefone"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/itemSite"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/itemEmail"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>